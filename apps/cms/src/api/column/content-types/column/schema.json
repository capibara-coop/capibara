{
  "kind": "collectionType",
  "collectionName": "columns",
  "info": {
    "singularName": "column",
    "pluralName": "columns",
    "displayName": "Column",
    "description": "Rubriche curate dagli autori"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "columns"
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "shared.link-item"
    }
  }
}

